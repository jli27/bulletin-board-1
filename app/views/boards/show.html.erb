<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>
  </div>
</div>

<hr>

<h2>Add a new post</h2>

<form action = "/insert_post" method="post">
  <div><label for="title_field">Title</label>
  <input id="title_field" type="text" name="title"></div>

  <div><label for="body_field">Body</label>
  <textarea id="body_field" name="body" cols="20" rows="3"></textarea></div>

  <div><label for="expires_on_field">Expires on</label>
  <input id="expires_on_field" type="date" name="expires"></div>

  <button>Add post</button>
</form>
  
<h2>Active posts</h2>
<% matching_posts = Post.where({ :board_id => @the_board.id }) %>

<table border="1">
  <tr>
    <td>Title</td>
    <td>Body</td>
    <td>Posted on</td>
    <td>Expires on</td>
  </tr>
  
  <% matching_posts.each do |a_post| %>
    <tr>
      <td><%= a_post.title %></td>
      <td><%= a_post.body %></td>
      <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
      <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
    </tr>
  <% end %>
</table>
